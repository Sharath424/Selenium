package ApiTesting;


import org.testng.Assert;
import org.testng.annotations.Test;


import io.restassured.RestAssured;
import io.restassured.http.Method;
import io.restassured.response.Response;
import io.restassured.specification.RequestSpecification;


public class Getting_started {
  	@Test
	public void simple_get_request(){
  		
	RestAssured.baseURI="http://localhost:8081/api/v1/todos/title";
	
	RequestSpecification httpRequest=RestAssured.given();
	
	Response response=httpRequest.request(Method.GET,"/python");
	
	String responseBody = response.getBody().asString();
	
	System.out.println("Response body is"+responseBody);
	
  	
	//status code validation
	int statusCode=response.getStatusCode();
	System.out.println("status code is: "+statusCode);
	Assert.assertEquals(statusCode, 200);
//	
//	//status line verification
	String statusLine=response.getStatusLine();
	System.out.println(statusLine);
	Assert.assertEquals(statusLine,"НТТР/1.1 200 OK");
	
  	}
}
